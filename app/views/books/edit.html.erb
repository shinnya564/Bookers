
  <head>
    <title>WebCampBackendNew</title>
  </head>

  <body>
    <h1>Editing Book</h1>

    <% if @book.errors.any? %>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_field :body %>
      <h4></h4>
      <%= f.submit 'Update Book' %>
    <% end %>

    <p>
      <%= link_to 'show', "http://localhost:3000/books/#{@book.id}" %>
      |
      <%= link_to 'back', "http://localhost:3000/books" %>
    </p>
  </body>