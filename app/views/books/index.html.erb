	<head>
    	<title>WebCampBackendNew</title>
	</head>

	<body>
		<p id="notice"></p>
		<h1>Books</h1>

	<table>
  		<thead>
	    	<tr>
    			<th>Title</th>
     			<th>Body</th>
    			<th colspan="3"></th>
    		</tr>
  		</thead>

		<tbody>
			<%= @books.each do |list| %>
				<tr>
					<td><%= list.title %></td>
					<td><%= list.body %></td>
					<td><%= link_to 'Show', "http://localhost:3000/books/#{list.id}" %></td>
					<td><%= link_to 'Edit', "http://localhost:3000/books/#{list.id}" %></td>
					<td><%= link_to 'Destroy', "http://localhost:3000/books/#{list.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
					<td><br></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h4>本文</h4>
	<%= form_for(@newbook, url: books_path, method: :post) do |f| %>
		<h4>タイトル</h4>
		<%= f.text_field :title %>
		<h4>本文</h4>
		<%= f.text_area :body %>
		<%= f.submit '投稿' %>
	<% end %>

